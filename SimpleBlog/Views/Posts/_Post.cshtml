@model SimpleBlog.Models.Post

<article>
    <h1><a href="@Url.RouteUrl("Post", new { Model.Id, Model.Slug })">@Model.Title</a></h1>
    <div>
        @Html.Raw(Model.Content)
    </div>
    <footer>
        <ul class="pull-right list-unstyled tags">
            @foreach (var tag in Model.Tags)
            {
                <li>
                    <a href="@Url.RouteUrl("Tag", new { tag.Id, tag.Slug})" class="badge">@tag.Name</a>
                </li>
            }
        </ul>
        Posted: @((int)(DateTime.UtcNow - Model.CreatedAt).TotalDays) days ago
    </footer>
</article>
